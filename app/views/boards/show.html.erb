<% if @board %> 
  <%= react_component('Board', notes: @notes, hex: @board.hex) %>
<% else %>
  <div class="text-center">
    <h1>Ups, we could not find your board. If you don't have any, create here :</h1>
    <%= button_to "Create new board", boards_path, class: "btn btn-default btn-lg" %> 
  </div>
<% end %>
